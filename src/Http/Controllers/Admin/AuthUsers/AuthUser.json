{
    "table": {
        "name": "users",
        "model": "App\\Models\\User",
        "where": {

        },
        "sort": {
            "column": "created_at",
            "order": "desc"
        }
    },
    "storage": {
        "avatar": {
            "path": "public/avatars",
            "public_path": "avatars"
        }
    },
    "index": {
        "title": "사용자 관리",
        "subtitle": "시스템 사용자 목록",
        "view": "jiny-auth::admin.auth-users.index",
        "route": "admin.auth.users.index",
        "filter": {
            "search": true,
            "role": true,
            "status": true
        },
        "pagination": {
            "per_page": 10
        }
    },
    "show": {
        "title": "사용자 상세",
        "subtitle": "사용자 정보 조회",
        "view": "jiny-auth::admin.auth-users.show",
        "route": "admin.auth.users.show"
    },
    "create": {
        "title": "사용자 생성",
        "subtitle": "새로운 사용자 추가",
        "view": "jiny-auth::admin.auth-users.create",
        "route": "admin.auth.users.create"
    },
    "edit": {
        "title": "사용자 수정",
        "subtitle": "사용자 정보 수정",
        "view": "jiny-auth::admin.auth-users.edit",
        "route": "admin.auth.users.edit"
    },
    "store": {
        "route": "admin.auth.users.store",
        "redirect": {
            "success": "admin.auth.users.index",
            "error": "admin.auth.users.create"
        },
        "validation": {
            "name": "required|string|max:255",
            "username": "required|string|max:255|unique:users",
            "email": "required|string|email|max:255|unique:users",
            "password": "required|string|min:8|confirmed",
            "role": "required|in:admin,editor,user",
            "status": "required|in:active,inactive,suspended",
            "phone": "nullable|string|max:20",
            "address": "nullable|string|max:500"
        },
        "messages": {
            "success": "사용자가 성공적으로 생성되었습니다.",
            "error": "사용자 생성에 실패했습니다."
        }
    },
    "update": {
        "route": "admin.auth.users.update",
        "redirect": {
            "success": "admin.auth.users.show",
            "error": "admin.auth.users.edit"
        },
        "validation": {
            "name": "required|string|max:255",
            "username": "required|string|max:255",
            "email": "required|string|email|max:255",
            "password": "nullable|string|min:8|confirmed",
            "role": "required|in:admin,editor,user",
            "status": "required|in:active,inactive,suspended",
            "phone": "nullable|string|max:20",
            "address": "nullable|string|max:500"
        },
        "messages": {
            "success": "사용자 정보가 성공적으로 업데이트되었습니다.",
            "error": "사용자 정보 업데이트에 실패했습니다."
        }
    },
    "delete": {
        "title": "사용자 삭제",
        "subtitle": "사용자 삭제 확인",
        "route": "admin.auth.users.destroy",
        "redirect": {
            "success": "admin.auth.users.index"
        },
        "messages": {
            "success": "사용자가 성공적으로 삭제되었습니다.",
            "error": "사용자 삭제에 실패했습니다."
        }
    }
}
