{
    "table": {
        "name": "user_logs",
        "sort": {
            "column": "created_at",
            "order": "desc"
        }
    },
    "storage": {},
    "index": {
        "title": "사용자 로그 관리",
        "subtitle": "사용자 활동 로그 목록",
        "view": "jiny-auth::admin.user-logs.index",
        "route": "admin.auth.user.logs.index",
        "filter": {
            "search": true,
            "action": true
        },
        "pagination": {
            "per_page": 20
        }
    },
    "show": {
        "title": "로그 상세",
        "subtitle": "로그 정보 조회",
        "view": "jiny-auth::admin.user-logs.show",
        "route": "admin.auth.user.logs.show"
    },
    "create": {
        "title": "로그 생성",
        "subtitle": "새로운 로그 추가",
        "view": "jiny-auth::admin.user-logs.create",
        "route": "admin.auth.user.logs.create"
    },
    "edit": {
        "title": "로그 수정",
        "subtitle": "로그 정보 수정",
        "view": "jiny-auth::admin.user-logs.edit",
        "route": "admin.auth.user.logs.edit"
    },
    "store": {
        "route": "admin.auth.user.logs.store",
        "redirect": {
            "success": "admin.auth.user.logs.index",
            "error": "admin.auth.user.logs.create"
        },
        "validation": {
            "user_id": "required|exists:users,id",
            "provider": "nullable|string|max:255",
            "ref": "nullable|string|max:255"
        },
        "messages": {
            "success": "로그가 성공적으로 생성되었습니다.",
            "error": "로그 생성에 실패했습니다."
        }
    },
    "update": {
        "route": "admin.auth.user.logs.update",
        "redirect": {
            "success": "admin.auth.user.logs.show",
            "error": "admin.auth.user.logs.edit"
        },
        "validation": {
            "provider": "nullable|string|max:255",
            "ref": "nullable|string|max:255"
        },
        "messages": {
            "success": "로그가 성공적으로 업데이트되었습니다.",
            "error": "로그 업데이트에 실패했습니다."
        }
    },
    "delete": {
        "title": "로그 삭제",
        "subtitle": "로그 삭제 확인",
        "route": "admin.auth.user.logs.destroy",
        "redirect": {
            "success": "admin.auth.user.logs.index"
        },
        "messages": {
            "success": "로그가 성공적으로 삭제되었습니다.",
            "error": "로그 삭제에 실패했습니다."
        }
    }
}
