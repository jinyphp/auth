{
    "table": {
        "name": "users_address",
        "sort": {
            "column": "created_at",
            "order": "desc"
        }
    },
    "storage": {},
    "index": {
        "title": "사용자 주소 관리",
        "subtitle": "사용자 주소 목록",
        "view": "jiny-auth::admin.user-address.index",
        "route": "admin.auth.user.addresses.index",
        "filter": {
            "search": true,
            "country": true
        },
        "pagination": {
            "per_page": 20
        }
    },
    "show": {
        "title": "주소 상세",
        "subtitle": "주소 정보 조회",
        "view": "jiny-auth::admin.user-address.show",
        "route": "admin.auth.user.addresses.show"
    },
    "create": {
        "title": "주소 생성",
        "subtitle": "새로운 주소 추가",
        "view": "jiny-auth::admin.user-address.create",
        "route": "admin.auth.user.addresses.create"
    },
    "edit": {
        "title": "주소 수정",
        "subtitle": "주소 정보 수정",
        "view": "jiny-auth::admin.user-address.edit",
        "route": "admin.auth.user.addresses.edit"
    },
    "store": {
        "route": "admin.auth.user.addresses.store",
        "redirect": {
            "success": "admin.auth.user.addresses.index",
            "error": "admin.auth.user.addresses.create"
        },
        "validation": {
            "user_id": "required|exists:users,id",
            "address1": "required|string|max:255",
            "address2": "nullable|string|max:255",
            "state": "nullable|string|max:100",
            "zipcode": "nullable|string|max:20",
            "country": "nullable|string|max:100"
        },
        "messages": {
            "success": "주소가 성공적으로 생성되었습니다.",
            "error": "주소 생성에 실패했습니다."
        }
    },
    "update": {
        "route": "admin.auth.user.addresses.update",
        "redirect": {
            "success": "admin.auth.user.addresses.show",
            "error": "admin.auth.user.addresses.edit"
        },
        "validation": {
            "address1": "required|string|max:255",
            "address2": "nullable|string|max:255",
            "state": "nullable|string|max:100",
            "zipcode": "nullable|string|max:20",
            "country": "nullable|string|max:100"
        },
        "messages": {
            "success": "주소가 성공적으로 업데이트되었습니다.",
            "error": "주소 업데이트에 실패했습니다."
        }
    },
    "delete": {
        "title": "주소 삭제",
        "subtitle": "주소 삭제 확인",
        "route": "admin.auth.user.addresses.destroy",
        "redirect": {
            "success": "admin.auth.user.addresses.index"
        },
        "messages": {
            "success": "주소가 성공적으로 삭제되었습니다.",
            "error": "주소 삭제에 실패했습니다."
        }
    }
}
